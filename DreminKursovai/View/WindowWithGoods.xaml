<Window x:Class="DreminKursovai.View.WindowWithGoods"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DreminKursovai.View"
        mc:Ignorable="d"
        Title="Окно с товарами" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Поиск:"/>
            <TextBox Width="150" Margin="5,0,0,0"/>
        </StackPanel>
        <ListView Grid.Row="1">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить" Command="{Binding Add}"/>
                    <MenuItem Header="Редоктировать" Command="{Binding Update}"/>
                    <MenuItem Header="Удалить" Command="{Binding Remove}"/>
                    <MenuItem Header="Список параметров товара" Command="{Binding OpenListParametrsEquipment}"/>
                    <MenuItem Header="Список производителей"/>
                    <MenuItem Header="Список заказов"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="100"/>
                    <GridViewColumn Header="Тип" Width="100"/>
                    <GridViewColumn Header="Модель" Width="100"/>
                    <GridViewColumn Header="Цена" Width="100"/>
                    <GridViewColumn Header="Год релиза" Width="100"/>
                    <GridViewColumn Header="Производитель" Width="100"/>
                    <GridViewColumn Header="Страна" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
