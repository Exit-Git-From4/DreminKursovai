<Window x:Class="DreminKursovai.View.ListEquipmentTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DreminKursovai.View"
        mc:Ignorable="d"
        Title="ListEquipmentTypeWindow" Height="450" Width="324">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding }" SelectedItem="{Binding SelectedEquipmentType}" HorizontalAlignment="Center">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding }"/>
                    </GridView>
                </ListView.View>
            </ListView>
        <StackPanel Grid.Row="1">
            <Button Content="Добавить Тип" Margin="5"/>
            <Button Content="Удалить тип" Margin="5"/>
        </StackPanel>

        <ListView ItemsSource="{Binding Options}" SelectedItem="{Binding SelectedOptions}" Grid.Column="1" HorizontalAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Параметр" Width="auto" DisplayMemberBinding="{Binding Title}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button Content="Добавить параметр" Margin="5" />
            <Button Content="Удалить параметр" Margin="5" />
        </StackPanel>
        
    </Grid>
</Window>
